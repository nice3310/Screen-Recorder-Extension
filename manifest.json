{
  "manifest_version": 3,
  "name": "Pixel Screen Recorder",
  "version": "1.0",
  "description": "Record your screen with a pixel-art interface. Export to MP4, AVI, MKV, or MOV. Hotkey support & optional audio recording.",

  "permissions": ["tabs", "activeTab", "storage", "windows", "scripting"],
  "host_permissions": ["<all_urls>"],

  "background": { "service_worker": "background.js" },

  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",

  "commands": {
    "open_popup":      { "suggested_key": { "default": "Ctrl+Shift+F" }, "description": "Open Popup" },
    "start_recording": { "suggested_key": { "default": "Ctrl+Shift+S" }, "description": "Start Recording" },
    "stop_recording":  { "suggested_key": { "default": "Ctrl+Shift+E" }, "description": "Stop Recording" }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'self';",
    "sandbox":         "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cat.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "lib/nes.min.css",
        "assets/cat.gif"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
